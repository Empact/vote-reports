.report-show > .sidebar .logo {
  text-align: center;
  background-color: #f6f6f6;
}

ul.details {
  float: right;
  padding-left: 0;
}

ul.details > li {
  margin: 0.1em 1em;
  position: relative;
}

ul.details li {
  list-style-type: none;
  font-size: 1.3em;
}

ul.details li h2 {
  font-size: 1em;
}

ul.details li.act-hover h2 {
  padding-right: 1em;
  background: transparent url(<%= image_path 'bullet_arrow_down.png' %>) center right no-repeat;
}

ul.details li h2 {
  display: inline;
}

.details h2 a {
  border-bottom: 0;
}
