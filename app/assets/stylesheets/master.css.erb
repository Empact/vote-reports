select.title {font-size:1em;}

html, body {
  height: 100%;
}

h1, h2, h3, h4, h5, h6 {
  font-family: 'Droid Sans', arial, serif;
}

.round-4 {
   -moz-border-radius: 4px;
  -webkit-border-radius: 4px;
  -khtml-border-radius: 4px;
  border-radius: 4px;
}

.round-6 {
   -moz-border-radius: 6px;
  -webkit-border-radius: 6px;
  -khtml-border-radius: 6px;
  border-radius: 6px;
}

.politician-search {
  background-color: #F0F8FB;
  padding: 5px 20px 5px 10px;
  margin-bottom: 10px;
}

.score-pagination {
  background-color: #F0F8FB;
  margin-top: 10px;
  margin-bottom: 40px;
  padding: 1em;
  text-align: center;
  font-weight: bold;
}

.politician-search label.reps-from:after {
  content: ':';
  font-size: 1.1em;
}
.politician-search input.reps-from {
  padding: .3em .5em;
  margin-left: .5em;
}
.politician-search .in-office {
  float: right;
  padding-top: .5em;
}
.politician-search .in-office label {
  position: relative;
  top: 0.25em;
}
.politician-search .show_all {
  margin-left: 0.5em;
  color: #015FC1;
  border-bottom: none;
  font-weight: bold;
}

.report-show {
  margin-top: 30px;
}

.report-show h1 {
  font-size: 2.5em;
}

.report-show > .sidebar > .spacer {
  font-size: 1.1em;
  padding-left: 20px;
}

.report-show > .sidebar .name {
  font-weight: bold;
  font-size: 1.1em;
}

.report-show > .sidebar dl {
  padding-top: 1em;
}

.report-show > .sidebar dl + dl {
  border-top: 1px solid #e5e5e5;
}

.report-show > .sidebar dt {
  color: #bababa;
  font-weight: normal;
}

.report-show > .sidebar dt:after {
  content: ':';
}

.report-show > .sidebar dd {
  margin-left: 0;
  margin-bottom: 1em;
}

#report_amendments_results_table {
  min-width: 800px;
}

div#agenda > h2 {
  border-bottom: 1px solid black;
}

div#agenda h5 {
  text-transform: uppercase;
  margin-bottom: 0;
  margin-top: 1.5em;
}

div#agenda > p, .report-show > .body > .description {
  font-size: 1.2em;
  font-family: 'Droid Serif', arial, serif;
}

div#agenda ul {
  color: #2eae0f;
  font-size: 0.8em;
  padding-left: 1.7em;
  margin-bottom: 1em;
}

div#agenda.cause_agenda ul {
  font-size: 1em;
  list-style-type: none;
}

div#agenda ul > li > span {
  color: #8f8f8f;
  font-size: 1.4em;
}
div#agenda ul > li a {
  text-decoration: none;
}
div#agenda ul > li + li {
  padding-top: 6px;
}

div#agenda .legislation a {
  color: #8f8f8f;
  text-decoration: underline;
}

#amendments th a {
  text-decoration: none;
}
#amendments th a:hover {
  text-decoration: underline;
}

h2 .your_location {
  font-weight: normal;
}

.embed {
  border: solid 1px gray;
}

.embed ul {
  list-style-type: none;
  padding-left: 0;
  margin: 0;
}


