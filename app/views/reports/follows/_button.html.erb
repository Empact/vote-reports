<div class="buttons clearfix follow_report">
  <%- if current_user.try(:follows?, report) -%>
    <%= link_to(image_tag('icons/thumb_up.png', :alt => 'Stop Following'), report_follows_path(report), :method => :delete, :class => 'negative') %>
  <%- else -%>
    <%= link_to(image_tag('icons/thumb_up.png', :alt => 'Follow'), report_follows_path(report), :method => :post, :class => 'positive') %>
  <%- end -%>
</div>
