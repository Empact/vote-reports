<% div_for(report, :class => 'clearfix') do %>
  <%= link_to image_tag(report.image_path), [report.user, report], :class => 'report_image' %>
  <div class="report_attrs">
    <%= link_to report.name, [report.user, report], :class => 'report_title' %>
      <% description = truncate(strip_tags(report.description), :length => 180) %>
      <%- if description.blank? -%>
        <br />
        <span class="report_creator">By <%= render 'users/user', :user => report.user %></span>
      <%- else -%>
        By <%= render 'users/user', :user => report.user %>
        <blockquote><%= description %></blockquote>
      <%- end -%>
  </div>
<% end %>