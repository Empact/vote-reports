<%- param_name ||= :page -%>
<div id="reports">
  <%- if reports.present? -%>
    <%- if reports.respond_to?(:total_pages) -%>
      <% paginated_section reports, :param_name => param_name do %>
        <ol class="reports">
          <%- reports.each do |report| -%>
            <li><%= render report %></li>
          <%- end -%>
        </ol>
      <% end %>
    <%- elsif  -%>
      <ol class="reports">
        <%- reports.each do |report| -%>
          <li><%= render report %></li>
        <%- end -%>
      </ol>
    <%- end -%>
  <%- else -%>
    <p>No reports found...</p>
  <%- end -%>
</div>
