<div class="publicize">
  <%- if permitted_to?(:edit, @report) && !report.published? -%>
    <h2>Publicize Your Report!</h2>
    <%= report_next_step(report) %>
  <%- end -%>

  <%= render 'reports/follows/section', :report => @report %>
</div>

<div class="clearfix section report_description">
  <%- if report.thumbnail.exists? -%>
  <div class="image large"><%= image_with_hover_tag report.thumbnail, report.name, :style => :header %></div>
  <%- end -%>
  <h1 class="report_title<%= ' big' if report.name.length < 14 %>"><%= report.name %></h1>
  <p>By <%= render 'users/user', :user => report.user %></p>
  <%- unless report.description.blank? -%>
  <blockquote><%= md_to_html(report.description) %></blockquote>
  <%- end -%>
</div>
