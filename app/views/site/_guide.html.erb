<% form_tag root_url, :method => :get, :'data-replace' => 'guide', :id => 'guide' do %>
  <dl>
    <dt>1) Enter your zip code</dt>
    <dd>
      <%= label_tag :representing, 'Zip Code', :class => 'hidden' %>
      <%= text_field_tag :representing, requested_location, :tabindex => 1, :size => 10 %>
      <%= submit_tag requested_location.present? ? 'Update' : 'Go!' %>
    </dd>
    <dt>2) Pick Some Issues</dt>
    <dd><%= render 'subjects/cloud', :subjects => @subjects, :target => lambda {|subjects|
      [root_path(:subjects => subjects, :representing => params[:representing]),
      {:'data-replace' => 'guide'}] } %></dd>
    <dt>3) See your reps' report cards</dt>
    <dd><%= render 'scores/table' %></dd>
  </dl>
<% end %>
