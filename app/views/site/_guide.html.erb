<%- replace ||= 'guide' -%>
<% form_tag send(target_path), :method => :get, :'data-replace' => replace do %>
  <dl>
    <dt><%= label_tag :representing, '1) Enter your zip code' %></dt>
    <dd>
      <%= text_field_tag :representing, requested_location, :tabindex => 1, :size => 10 %>
      <%= submit_tag 'Show Reps' %>
    </dd>
    <dt>2) Pick your issues</dt>
    <dd><%= render 'subjects/cloud', :subjects => @subjects, :target => lambda {|subjects|
      [send(target_path, :subjects => subjects, :representing => params[:representing]),
      {:'data-replace' => 'guide'}] } %></dd>
    <dt>3) See your reps' report cards</dt>
    <dd><%= render 'scores/table', :politicians => @politicians, :reports => @topical_reports %></dd>
  </dl>
<% end %>
<%- unless current_page?(guide_path) -%>
  <%= link_to "See More...", guide_path(:representing => requested_location, :subjects => params[:subjects]) %>
<%- end -%>