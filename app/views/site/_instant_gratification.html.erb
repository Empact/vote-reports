<% form_tag root_url, :method => :get, :'data-replace' => '#instant_gratification', :id => 'instant_gratification' do %>
  <dl>
    <dt>1) Tell us who represents you</dt>
    <dd>
        <%= label_tag :from_where, 'From Where?' %>
        <%= text_field_tag :from_where, params[:from_where] %>
        <%= hidden_field_tag :in_office, true %>
        <%= submit_tag 'Go!' %>
    </dd>
    <dt>2) Tell us what you care about</dt>
    <dd><%= render 'subjects/cloud', :subjects => @subjects, :target => lambda {|subjects|
      [root_path(:subjects => subjects, :from_where => params[:from_where], :in_office => true),
      {:'data-replace' => '#instant_gratification'}] } %></dd>
    <dt>3) We'll tell you how well they represent you, really</dt>
    <dd><%= render 'scores/table' %></dd>
  </dl>
<% end %>
