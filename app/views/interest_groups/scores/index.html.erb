<div id="report_scores_section" class="section report_scores">
  <h3>Scores</h3>
  <p>This report's scores are based on <%= evidence_types(@report) %> periodically issued by the <%= @report.name %>:</p>
  <%- if @report -%>
    <%- if @scores.present? -%>
      <%= render 'politicians/search', :in_office => @in_office, :url => interest_group_report_scores_path(@interest_group), :replace => 'report_scores' %>
    <%- end -%>
    <%= render 'reports/scores/table', :report => @report, :scores => @scores,
    :reset_path => interest_group_report_scores_path(@interest_group, :representing => '') %>
  <%- else -%>
    <p>No ratings on record for this group</p>
  <%- end -%>
</div>
