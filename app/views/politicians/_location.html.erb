<%- if location = politician.location -%>
  <%-
    no_fancybox ||= false
    classes = no_fancybox ? 'politician_location' : 'fancyboxy politician_location'
    path = polymorphic_path(location)
    title = location_title(location)
  -%>
  <%- if current_page?(path) -%>
    <%= content_tag :span, location.abbreviation, :class => 'politician_location', :title => title %>
  <%- else -%>
    <%= link_to location.abbreviation, path, :class => classes, :title => title %>
  <%- end -%>
<%- end -%>
