<%- title "#{@politician.full_name}'s Cause Radar" -%>

<% content_for :javascript_area do %>
  <%= javascript_include_tag 'radars' %>
  <%= javascript_tag do %>
    $(function() {
      scores = <%= @cause_scores.map(&:last).to_json.html_safe %>;
      labels = <%= @cause_scores.map(&:first).to_json.html_safe %>;
      radar('<%= dom_id(@politician, :radar_chart) %>', 700, 700, scores, labels, null, 100, {label_break: 0});
    });
  <% end %>
<% end %>

<%= div_for @politician, :radar_chart do %>
<% end %>
