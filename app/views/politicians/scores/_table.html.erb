<%- source ||= 'Report' -%>

<%- if scores.blank? -%>
  <p>No <%= source.pluralize %> for this politician yet.
  <%- if source == 'Report' -%>  
    Maybe you can <%= link_to 'make the first', new_report_path %>?
  <%- elsif source == 'Cause' -%>
    <%= mail_to 'causes@votereports.org', 'Let us know' %> if one of <%= link_to 'their report scores', '#Reports' %> should be included in a cause.
  <%- end -%>
  </p>
<%- else -%>
<div id="report_scores">
  <%- paginated_section scores, :'data-replace' => 'reports' do -%>
    <table>
      <thead>
        <tr>
          <th><%= source %></th>
          <th>Score</th>
        </tr>
      </thead>
      <tbody>
        <%- scores.each do |report_score| -%>
        <tr>
          <td><%= render 'reports/report', :report => report_score.report %></td>
          <td><%= render 'reports/scores/score', :score => report_score %></td>
        </tr>
        <%- end -%>
      </tbody>
    </table>
  <%- end -%>
</div>
<%- end -%>
