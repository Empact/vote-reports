<%-
  tag ||= :div
  full_name ||= false
-%>

<% content_tag_for tag, politician, :class => 'clearfix' do %>
  <%= render 'politicians/headshot', :politician => politician %>
  <%- if full_name -%>
    <%= render 'politicians/full_name', :politician => politician %>
  <%- else -%>
    <%= render 'politicians/name', :politician => politician %>
  <%- end -%>
<% end %>
