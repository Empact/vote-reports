<%-
  tag ||= :div
  full_name ||= false
  headshot_style ||= :medium
  name_only ||= false
-%>

<% content_tag_for tag, politician, :class => 'clearfix' do %>
  <%= render 'politicians/headshot', :politician => politician, :style => headshot_style %>
  <%= render 'politicians/name', :politician => politician, :full => full_name, :name_only => name_only %>
<% end %>
