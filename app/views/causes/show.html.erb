<%- title "Cause - #{h(@cause.name)}" -%>
<div class="section">
  <%= render 'causes/header', :cause => @cause %>

  <%- permitted_to? :edit, @cause do -%>
    <%= link_to 'Edit Cause', edit_cause_path(@cause) %>
  <%- end -%>
</div>

<div class="tabbed-nav">
  <ul>
    <li><%= link_to 'Scores', cause_scores_path(@cause) %></li>
    <li><%= link_to 'Reports', cause_reports_path(@cause) %></li>
  </ul>
</div>
