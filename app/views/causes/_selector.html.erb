<ul class="clearfix causes_selector">
  <%- causes.each do |cause| -%>
    <% content_tag :li, :class => cycle('left', 'right') do %>
      <%= check_box_tag 'causes[]', cause.to_param, false, :id => "causes_#{cause.to_param}" %>
      <%= label_tag "causes_#{cause.to_param}", cause.name, :class => 'cause_title', :title => cause.description %>
      <%= link_to image_tag('icons/link_go.png'), cause %>
    <% end %>
  <%- end -%>
</ul>
