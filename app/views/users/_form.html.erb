<% form_for user do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email, :class => "text" %><br />

    <%= f.label :password %><br />
    <%= f.password_field :password, :class => "text" %><br />

    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, :class => "text" %><br />

    <%= f.label :username %><br />
    <%= f.text_field :username, :class => "text" %><br />
  </p>
  <p><%= f.submit "Sign up" %></p>
<% end %>
