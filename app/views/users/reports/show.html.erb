<% title "Report - #{h @report.name}" %>

<%= render 'reports/header', :report => @report %>

<div class="ui-tabs">
  <ul>
    <li><%= link_to content_tag(:span, 'Scores'), user_report_scores_path(@report.user, @report), :title => 'Scores' %></li>
    <li><%= link_to content_tag(:span, 'Subjects'), user_report_subjects_path(@report.user, @report), :title => 'Subjects' %></li>
    <li><%= link_to content_tag(:span, 'Agenda'), user_report_agenda_path(@report.user, @report), :title => 'Agenda' %></li>
    <li><%= link_to content_tag(:span, 'Visibility'), user_report_visibility_path(@report.user, @report), :title => 'Visibility' %></li>
    <%- permitted_to? :edit, @report do -%>
      <li><a href="#admin">Admin</a></li>
    <%- end -%>
  </ul>

  <%- permitted_to? :edit, @report do -%>
    <div id="admin" class="section">
      <h2>Admin</h2>
      <ul class="actions_menu">
        <li><%= link_to 'Edit Report', edit_user_report_path(@report.user, @report) %></li>
        <%- permitted_to? :destroy, @report do -%>
        <li><%= raw button_to("Delete Report", [@report.user, @report], :confirm => 'Are you sure you want to delete this report?', :method => :delete) %></li>
        <%- end -%>
      </ul>
    </div>
  <%- end -%>
</div>


