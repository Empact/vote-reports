<% title "Subject - #{@subject.name}" %>

<div class="section">
  <h2><%= @subject.name %></h2>

  <div class="ui-tabs">
    <ul>
      <li><% link_to subject_reports_path(@subject), :title => 'Reports' do %>
        <span>Reports <span class="count"><%= @subject.reports.published.count %></span></span>
      <% end %></li>
      <li><% link_to subject_bills_path(@subject), :title => 'Bills' do %>
        <span>Bills <span class="count"><%= @subject.bills.count %></span></span>
      <% end %></li>
    </ul>
  </div>
</div>
