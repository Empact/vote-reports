<% title %Q{Bill - "#{h @bill.titles.first}"} %>

<div class="section">
  <h2><%= render @bill, :hide_year => true %></h2>
  <p>Introduced on <%= @bill.introduced_on.to_s(:long_ordinal) %>
  <%- if @bill.sponsor -%>
    by <%= render @bill.sponsor %>
  <%- end -%>
  </p>

  <ul>
    <%- if @bill.opencongress_url -%>
    <li><%= link_to 'View on OpenCongress', @bill.opencongress_url %></li>
    <%- end -%>
    <li><%= link_to 'View Summary', '#', :'data-dialog' => 'bill_summary' %></li>
  </ul>

  <div id="bill_summary" class="hidden" data-dialog-title="Bill Summary">
    <%= to_html(@bill.summary) %>
  </div>
</div>

<%- if (amendments = @bill.amendments.with_votes).present? -%>
<div class="section" id="amendments">
  <h2>Amendments</h2>
  <ul>
    <% amendments.each do |amendment|  %>
      <li><%= render amendment %></li>
    <% end %>
  </ul>
</div>
<%- end -%>

<%- if @rolls.present? -%>
<div class="section" id="votes">
  <h2>Votes</h2>
  <ul>
    <% @rolls.each do |roll|  %>
      <li><%= render roll %></li>
    <% end %>
  </ul>
</div>
<%- end -%>

<%- if @bill.reports.published.present? -%>
<div class="section" id="reports">
  <h2>Reports</h2>
  <ul>
    <%- @bill.reports.published.each do |report| -%>
      <li><%= render 'reports/report', :report => report %></li>
    <%- end -%>
  </ul>
</div>
<%- end -%>

<div class="section bill_subjects">
  <h2>Subjects</h2>
  <p>Follow the links below to find bills &amp; reports on related subjects.</p>
  <%= render 'subjects/cloud', :subjects => @subjects %>
</div>
