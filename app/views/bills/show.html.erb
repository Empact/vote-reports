<% title %Q{Bill - "#{h @bill.titles.first}"} %>

<div class="section">
  <h2><%= render @bill, :hide_year => true, :hide_titles => true %></h2>
  <p>Introduced on <%= @bill.introduced_on.to_s(:long_ordinal) %>
  <%- if @bill.sponsor -%>
    by <%= render @bill.sponsor %>
  <%- end -%>
  </p>
</div>

<%- if @bill.opencongress_url -%>
<div class="buttons open-congress clearfix">
<%= link_to 'View on OpenCongress', @bill.opencongress_url %>
</div>
<%- end -%>

<%- unless [@bill.titles, @bill.summary, @amendments, @rolls, @subjects, @reports].all?(&:blank?) -%>
<div class="tabbed-nav">
  <ul>
    <%- if @bill.titles.present? -%>
      <li><a href="#bill_titles">All Titles</a></li>
    <%- end -%>
    <%- if @bill.summary.present? -%>
      <li><a href="#bill_summary">Summary</a></li>
    <%- end -%>
    <%- if @amendments.present? -%>
      <li><a href="#amendments">Amendments</a></li>
    <% end %>
    <%- if @rolls.present? -%>
      <li><a href="#votes">Votes</a></li>
    <%- end -%>
    <%- if @reports.present? -%>
      <li><a href="#reports">Reports</a></li>
    <%- end -%>
    <%- if @subjects.present? -%>
      <li><a href="#bill_subjects">Subjects</a></li>
    <%- end -%>
  </ul>

  <%- if @bill.titles.present? -%>
  <div id="bill_titles">
    <%= render 'bills/titles', :bill => @bill %>
  </div>
  <%- end -%>

  <%- if @bill.summary.present? -%>
  <div id="bill_summary">
    <%= to_html(@bill.summary) %>
  </div>
  <%- end -%>

  <%- if @amendments.present? -%>
  <div id="amendments" class="section">
    <h2>Amendments</h2>
    <ul>
      <% @amendments.each do |amendment|  %>
        <li><%= render amendment %></li>
      <% end %>
    </ul>
  </div>
  <%- end -%>

  <%- if @rolls.present? -%>
  <div id="votes" class="section">
    <h2>Votes</h2>
    <ul>
      <% @rolls.each do |roll|  %>
        <li><%= render roll %></li>
      <% end %>
    </ul>
  </div>
  <%- end -%>

  <%- if @reports.present? -%>
  <div id="reports" class="section">
    <h2>Reports</h2>
    <ul>
      <%- @bill.reports.published.each do |report| -%>
        <li><%= render 'reports/report', :report => report %></li>
      <%- end -%>
    </ul>
  </div>
  <%- end -%>

  <%- if @subjects.present? -%>
  <div id="bill_subjects" class="section bill_subjects">
    <h2>Subjects</h2>
    <p>Follow the links below to find bills &amp; reports on related subjects.</p>
    <%= render 'subjects/cloud', :subjects => @subjects %>
  </div>
  <%- end -%>
</div>
<%- end -%>
