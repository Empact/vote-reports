<%-
  selected ||= nil
  scores ||= []
-%>

<div class="span-5">
  <div class="stances round-4">
    <h2>Your Stance</h2>
    <ul>
      <li class="<%= 'selected ' if !selected %>round-4">
        <%= link_to 'Overall Score', new_guide_path(:causes => guide.reports), :class => 'act-replace', :rel => 'instant_scores' %>
      </li>
      <% guide.reports.each do |report| %>
        <li class="round-4 act-hover<%= ' selected' if selected == report %>" rel="<%= dom_id(report, :remove) %>">
          <%= link_to report.name, new_guide_path(:causes => guide.reports, :selected => report), :class => 'act-replace', :rel => 'instant_scores' %>
          <%= link_to 'x', new_guide_path(:causes => guide.reports.map(&:to_param) - [report.to_param], :from => 'causes'), :class => 'act-replace remove_stance hide', :rel => 'instant_scores', :id => dom_id(report, :remove) %>
        </li>
      <% end %>
    </ul>
  </div>
</div>

<dl class="span-19 last guide_scores">
  <dt>President of these United State of America</dt>
  <%= render 'politicians/scores', :scores => scores, :politicians => guide.presidents %>

  <dt>Senators for <%= state_title(guide.district.state) %></dt>
  <%= render 'politicians/scores', :scores => scores, :politicians => guide.senators.in_office %>

  <dt>Representative for <%= guide.district.full_name %></dt>
  <%= render 'politicians/scores', :scores => scores, :politicians => guide.representatives.in_office %>
</dl>
