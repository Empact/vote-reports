<%- title 'Guide - Zip Code' -%>


<div class="section guide">
  <% form_tag new_guide_path, :'data-replace' => 'content', :method => :get do %>
    <dl>
      <dt><%= label_tag :representing, 'Enter your zip code' %></dt>
      <dd>
        <%= text_field_tag :representing, requested_location, :tabindex => 1, :size => 10 %>
        <%= submit_tag 'Show Reps' %>
      </dd>
    </dl>
  <% end %>
</div>
