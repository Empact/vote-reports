<%- title score_title(@score) -%>
<div>
  <%= render 'reports/scores/evidence', :score => @score %>
  <dl class="cause_score_evidence">
    <%- @score.evidence.group_by(&:subject).each_pair do |subject, scores| -%>
      <%- scores.each do |report_score| -%>
        <dt><%= render 'reports/scores/score', :score => report_score.evidence %></dt>
        <dd class="clearfix"><%= render 'reports/report', :report => subject %></dd>
      <%- end -%>
    <%- end -%>
  </dl>
</div>
