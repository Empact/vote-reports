<%- if session[:zip_code] -%>
  Zip: <%= session[:zip_code] %>
    <%= link_to 'clear', location_path(:return_to => request.request_uri), :method => :delete %>
<%- else -%>
  <%= current_location %> (<%= link_to 'set location', new_location_path(:return_to => request.path), :class => 'fancyboxy' %>)
<%- end -%>
