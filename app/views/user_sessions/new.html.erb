<% title "Log in" %>

<h2>Log in</h2>

<% form_for @user_session do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email, :class => "text" %><br />

    <%= f.label :password %><br />
    <%= f.password_field :password, :class => "text" %>
  </p>
  <p><%= f.submit "Log in" %></p>
<% end %>


